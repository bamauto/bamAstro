---
import SEO from '../components/common/SEO.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  keywords?: string[];
  noindex?: boolean;
}

const props = Astro.props;
---

<!doctype html>
<html lang="ko" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO {...props} />
    
    <!-- Premium Fonts: Pretendard -->
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
    
    <style>
      body {
        font-family: "Pretendard Variable", Pretendard, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
      }
    </style>
    <slot name="head" />
  </head>
  <body class="bg-slate-950 text-slate-50 min-h-screen selection:bg-indigo-500/30 selection:text-indigo-200">
    <!-- Background Gradients -->
    <!-- Background Gradients & Patterns -->
    <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
      <!-- Dynamic Orbs - Increased Vibrancy -->
      <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-purple-600/30 blur-[120px] animate-float"></div>
      <div class="absolute top-[20%] right-[-10%] w-[40%] h-[40%] rounded-full bg-fuchsia-600/20 blur-[100px] animate-float-delayed"></div>
      <div class="absolute bottom-[-10%] left-[20%] w-[50%] h-[50%] rounded-full bg-violet-600/20 blur-[100px] animate-pulse-slow"></div>
      
      <!-- Grid Pattern -->
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-[0.05]"></div>
      
      <!-- Global Noise/Texture (Optional for more texture) -->
      <div class="absolute inset-0 bg-repeat opacity-[0.02]" style="background-image: url('/noise.png');"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>
