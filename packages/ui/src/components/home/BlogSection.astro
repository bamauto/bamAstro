---
import { Clock, ArrowRight, Sparkles, TrendingUp, BookOpen } from 'lucide-astro';

interface BlogPost {
  id: string;
  title: string;
  excerpt: string;
  category: string;
  readTime: string;
  date: string;
  featured?: boolean;
  gradient?: string;
}

const blogPosts: BlogPost[] = [
  {
    id: '1',
    title: '첫 방문 전 알아야 할 에티켓 7가지',
    excerpt: '프리미엄 라운지를 처음 방문하시나요? 당황하지 않고 품격 있게 즐기는 필수 매너를 정리했습니다.',
    category: '초보 가이드',
    readTime: '5분',
    date: '2026.01.20',
    featured: true,
    gradient: 'from-violet-600 to-purple-600'
  },
  {
    id: '2',
    title: '2026 수원 유흥 트렌드 리포트',
    excerpt: '올해 수원 프리미엄 시장의 변화와 새로운 트렌드를 분석했습니다. 스마트한 선택을 위한 인사이트.',
    category: '트렌드',
    readTime: '7분',
    date: '2026.01.18',
    gradient: 'from-fuchsia-600 to-pink-600'
  },
  {
    id: '3',
    title: '비즈니스 접대, 성공하는 장소 선택법',
    excerpt: '중요한 비즈니스 미팅을 위한 완벽한 장소 선택 기준과 예약 팁을 공개합니다.',
    category: '비즈니스',
    readTime: '4분',
    date: '2026.01.15',
    gradient: 'from-indigo-600 to-violet-600'
  },
  {
    id: '4',
    title: '예산별 추천 코스 완벽 정리',
    excerpt: '30만원부터 100만원대까지, 예산에 맞는 최적의 코스와 구성을 안내해 드립니다.',
    category: '가격 가이드',
    readTime: '6분',
    date: '2026.01.12',
    gradient: 'from-purple-600 to-indigo-600'
  }
];

const featuredPost = blogPosts.find(p => p.featured);
const regularPosts = blogPosts.filter(p => !p.featured);
---

<section class="py-28 bg-transparent relative overflow-hidden">
  <!-- Background Decorations -->
  <div class="absolute top-20 right-0 w-[500px] h-[500px] bg-purple-600/5 rounded-full blur-[120px] pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-fuchsia-600/5 rounded-full blur-[100px] pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 bg-purple-500/10 border border-purple-500/20 px-5 py-2 rounded-full mb-6 backdrop-blur-sm">
        <BookOpen class="w-4 h-4 text-purple-400" />
        <span class="text-purple-300 text-sm font-medium tracking-wide">인사이더 팁 & 가이드</span>
      </div>
      <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight">
        알아두면 좋은
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-300 via-fuchsia-400 to-violet-500">
          프리미엄 인사이트
        </span>
      </h2>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto leading-relaxed">
        15년 업계 경험을 바탕으로 한 <strong class="text-white">실전 가이드</strong>와 <strong class="text-white">최신 트렌드</strong>를 공유합니다.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 max-w-7xl mx-auto">

      <!-- Featured Post (Large) -->
      {featuredPost && (
        <article class="lg:col-span-7 group">
          <a href={`/blog/${featuredPost.id}`} class="block h-full">
            <div class="relative h-full min-h-[480px] rounded-3xl overflow-hidden border border-slate-800/50 bg-gradient-to-br from-slate-900/80 to-slate-800/40 backdrop-blur-xl hover:border-purple-500/40 transition-all duration-500 hover:shadow-[0_0_60px_rgba(168,85,247,0.15)]">
              <!-- Gradient Overlay -->
              <div class={`absolute inset-0 bg-gradient-to-br ${featuredPost.gradient} opacity-10 group-hover:opacity-20 transition-opacity duration-500`}></div>

              <!-- Decorative Elements -->
              <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-bl from-purple-500/20 to-transparent rounded-full blur-3xl transform translate-x-20 -translate-y-20 group-hover:translate-x-10 transition-transform duration-700"></div>
              <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-fuchsia-500/10 to-transparent rounded-full blur-2xl"></div>

              <!-- Content -->
              <div class="relative z-10 p-10 h-full flex flex-col">
                <!-- Top Badge -->
                <div class="flex items-center gap-3 mb-8">
                  <span class="inline-flex items-center gap-1.5 bg-purple-500/20 border border-purple-500/30 text-purple-300 px-4 py-1.5 rounded-full text-sm font-medium">
                    <Sparkles class="w-3.5 h-3.5" />
                    추천
                  </span>
                  <span class="text-slate-500 text-sm">{featuredPost.date}</span>
                </div>

                <!-- Main Content -->
                <div class="flex-grow flex flex-col justify-end">
                  <span class="text-purple-400 font-bold tracking-wider text-sm uppercase mb-3">{featuredPost.category}</span>
                  <h3 class="text-3xl md:text-4xl font-bold text-white mb-5 leading-tight group-hover:text-purple-100 transition-colors">
                    {featuredPost.title}
                  </h3>
                  <p class="text-slate-400 text-lg leading-relaxed mb-8 max-w-xl">
                    {featuredPost.excerpt}
                  </p>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 text-slate-500">
                      <Clock class="w-4 h-4" />
                      <span class="text-sm">{featuredPost.readTime} 읽기</span>
                    </div>
                    <span class="inline-flex items-center gap-2 text-purple-400 font-semibold group-hover:gap-4 transition-all">
                      자세히 보기 <ArrowRight class="w-5 h-5" />
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      )}

      <!-- Regular Posts (Stacked) -->
      <div class="lg:col-span-5 flex flex-col gap-6">
        {regularPosts.map((post, index) => (
          <article class="group flex-1">
            <a href={`/blog/${post.id}`} class="block h-full">
              <div class="relative h-full p-6 rounded-2xl border border-slate-800/50 bg-slate-900/40 backdrop-blur-sm hover:border-purple-500/30 hover:bg-slate-800/40 transition-all duration-300 hover:shadow-lg overflow-hidden">
                <!-- Subtle Gradient -->
                <div class={`absolute inset-0 bg-gradient-to-r ${post.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>

                <div class="relative z-10">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-xs font-bold tracking-wider text-purple-400 uppercase bg-purple-500/10 px-3 py-1 rounded-full">
                      {post.category}
                    </span>
                    <span class="text-slate-600 text-xs">{post.date}</span>
                  </div>

                  <h3 class="text-xl font-bold text-white mb-3 group-hover:text-purple-200 transition-colors leading-snug">
                    {post.title}
                  </h3>
                  <p class="text-slate-400 text-sm leading-relaxed line-clamp-2 mb-4">
                    {post.excerpt}
                  </p>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-1.5 text-slate-500">
                      <Clock class="w-3.5 h-3.5" />
                      <span class="text-xs">{post.readTime}</span>
                    </div>
                    <ArrowRight class="w-4 h-4 text-slate-600 group-hover:text-purple-400 group-hover:translate-x-1 transition-all" />
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <!-- View All Button -->
    <div class="text-center mt-16">
      <a href="/blog" class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-purple-600/20 to-fuchsia-600/20 border border-purple-500/30 rounded-2xl text-white font-semibold hover:from-purple-600/30 hover:to-fuchsia-600/30 hover:border-purple-500/50 transition-all duration-300 backdrop-blur-sm">
        <TrendingUp class="w-5 h-5 text-purple-400" />
        <span>모든 가이드 보기</span>
        <ArrowRight class="w-5 h-5 text-purple-400 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
