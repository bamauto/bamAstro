---
import type { RegionConfig } from '../../types/region';

interface Props {
  region: RegionConfig;
}

const { region } = Astro.props;

const navItems = [
  { label: '홈', href: '/' },
  ...region.venueTypes.map(type => ({
    label: type.name,
    href: `/${type.slug}`
  })),
  { label: '이용안내', href: `/${region.id}-entertainment-beginner-guide` },
  { label: '가격안내', href: `/${region.id}-entertainment-price-guide` },
];
---

<header class="fixed top-0 w-full glass z-50 border-b border-white/5 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <div class="flex-shrink-0">
        <a href="/" class="group flex items-center gap-3">
          <!-- Logo Icon -->
          <div class="relative">
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500/20 via-fuchsia-500/20 to-violet-600/20 border border-purple-500/30 flex items-center justify-center shadow-lg shadow-purple-500/20 group-hover:shadow-purple-500/40 group-hover:border-purple-500/50 transition-all duration-300 group-hover:scale-105 backdrop-blur-sm">
              <img src="/favicon.svg" alt="Logo" class="w-6 h-6" />
            </div>
            <div class="absolute -top-0.5 -right-0.5 w-3 h-3 bg-gradient-to-r from-amber-400 to-orange-500 rounded-full border-2 border-slate-900 animate-pulse"></div>
          </div>
          <!-- Logo Text -->
          <div class="flex flex-col">
            <div class="flex items-center gap-1.5">
              <span class="text-xl font-black tracking-tight text-white group-hover:text-purple-100 transition-colors">{region.name}</span>
              <span class="text-[10px] font-bold tracking-wider text-purple-400 bg-purple-500/15 px-1.5 py-0.5 rounded uppercase border border-purple-500/20">VIP</span>
            </div>
            <span class="text-xs font-medium tracking-wide bg-gradient-to-r from-purple-400 via-fuchsia-400 to-violet-400 bg-clip-text text-transparent">{region.seo.titleSuffix}</span>
          </div>
        </a>
      </div>
      
      <nav class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sm font-medium text-slate-300 hover:text-white hover:text-shadow-glow transition-all duration-300 relative group py-2">
            {item.label}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-fuchsia-500 to-purple-500 transition-all duration-300 group-hover:w-full box-shadow-glow"></span>
          </a>
        ))}
      </nav>
      
      <div class="flex items-center gap-4">
        <a href={`tel:${region.phone}`} class="hidden sm:flex btn-primary shadow-lg shadow-purple-900/20 text-sm py-2.5">
          <span class="relative z-10 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            전화예약
          </span>
        </a>

        {/* Mobile Menu Button */}
        <button id="mobile-menu-btn" class="md:hidden text-slate-300 hover:text-purple-400 p-2 transition-colors" aria-label="Menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
      </div>
    </div>
  </div>

  {/* Mobile Menu */}
  <div id="mobile-menu" class="hidden md:hidden bg-slate-900/40 backdrop-blur-2xl border-b border-white/10 absolute top-20 left-0 w-full animate-fade-in-down shadow-2xl">
      <nav class="px-4 pt-2 pb-6 space-y-1">
          {navItems.map(item => (
              <a href={item.href} class="block px-3 py-4 text-base font-medium text-slate-300 hover:text-white hover:bg-white/5 hover:border-l-4 hover:border-purple-500 rounded-r-lg transition-all border-b border-white/5 last:border-0">
                  {item.label}
              </a>
          ))}
           <a href={`tel:${region.phone}`} class="block w-full text-center mt-6 btn-primary py-4 rounded-xl flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                전화문의
          </a>
      </nav>
  </div>
</header>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    
    btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
        
        // Icon toggle (optional, or just keep simple)
        const isOpen = !menu?.classList.contains('hidden');
        if(isOpen) {
             btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>`;
        } else {
             btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>`;
        }
    });
</script>
