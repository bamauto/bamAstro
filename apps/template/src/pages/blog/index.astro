---
import { PageLayout } from '@bamastro/ui';
import { region } from '@/config/region';
import { getBlogPosts } from '@/lib/supabase';
import { Clock, ArrowRight, Tag, BookOpen, Sparkles } from 'lucide-astro';

const posts = await getBlogPosts();

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
}

const featuredPost = posts.find(p => p.featured);
const regularPosts = posts.filter(p => !p.featured);

const seoProps = {
  title: `블로그 & 가이드 | ${region.name} 유흥 정보`,
  description: `${region.name} 유흥 이용 팁, 에티켓 가이드, 트렌드 리포트 등 유용한 정보를 확인하세요.`,
};
---

<PageLayout {...seoProps} region={region}>
  <div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
    <!-- Hero Section -->
    <div class="relative pt-32 pb-16 overflow-hidden">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-purple-600/10 rounded-full blur-[150px] pointer-events-none"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-fuchsia-600/10 rounded-full blur-[120px] pointer-events-none"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center">
          <div class="inline-flex items-center gap-2 bg-purple-500/10 border border-purple-500/20 px-5 py-2 rounded-full mb-6 backdrop-blur-sm">
            <BookOpen class="w-4 h-4 text-purple-400" />
            <span class="text-purple-300 text-sm font-medium tracking-wide">인사이더 팁 & 가이드</span>
          </div>
          <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight">
            블로그 &
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-300 via-fuchsia-400 to-violet-500">
              가이드
            </span>
          </h1>
          <p class="text-slate-400 text-lg max-w-2xl mx-auto leading-relaxed">
            15년 업계 경험을 바탕으로 한 실전 가이드와 최신 트렌드를 공유합니다.
          </p>
        </div>
      </div>
    </div>

    <!-- Blog List -->
    <div class="container mx-auto px-4 pb-32">
      <!-- Featured Post -->
      {featuredPost && (
        <div class="mb-12">
          <a href={`/blog/${featuredPost.slug}`} class="block group">
            <div class="relative rounded-3xl overflow-hidden border border-slate-800/50 hover:border-purple-500/40 transition-all duration-500 hover:shadow-[0_0_60px_rgba(168,85,247,0.15)] min-h-[400px]">
              <!-- Background Image -->
              {featuredPost.featured_image && (
                <img
                  src={featuredPost.featured_image}
                  alt={featuredPost.title}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
              )}
              <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/70 to-slate-950/30"></div>

              <div class="relative z-10 p-10 md:p-12 h-full flex flex-col justify-end">
                <div class="flex flex-wrap items-center gap-3 mb-6">
                  <span class="inline-flex items-center gap-1.5 bg-purple-500/20 border border-purple-500/30 text-purple-300 px-4 py-1.5 rounded-full text-sm font-medium">
                    <Sparkles class="w-3.5 h-3.5" />
                    추천
                  </span>
                  <span class="inline-flex items-center gap-1.5 bg-slate-800/50 text-slate-400 px-3 py-1 rounded-full text-sm">
                    <Tag class="w-3 h-3" />
                    {featuredPost.category}
                  </span>
                </div>

                <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-purple-100 transition-colors">
                  {featuredPost.title}
                </h2>
                <p class="text-slate-400 text-lg leading-relaxed mb-6 max-w-3xl">
                  {featuredPost.excerpt}
                </p>

                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4 text-slate-500 text-sm">
                    <span>{formatDate(featuredPost.created_at)}</span>
                    <span class="flex items-center gap-1.5">
                      <Clock class="w-4 h-4" />
                      {featuredPost.read_time} 읽기
                    </span>
                  </div>
                  <span class="inline-flex items-center gap-2 text-purple-400 font-semibold group-hover:gap-4 transition-all">
                    자세히 보기 <ArrowRight class="w-5 h-5" />
                  </span>
                </div>
              </div>
            </div>
          </a>
        </div>
      )}

      <!-- Regular Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {regularPosts.map((post, index) => (
          <a href={`/blog/${post.slug}`} class="block group">
            <article class="h-full rounded-2xl border border-slate-800/50 bg-slate-900/40 backdrop-blur-sm hover:border-purple-500/30 hover:bg-slate-800/40 transition-all duration-300 hover:shadow-lg overflow-hidden flex flex-col">
              <!-- Thumbnail Image -->
              {post.featured_image && (
                <div class="relative h-48 overflow-hidden">
                  <img
                    src={post.featured_image}
                    alt={post.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
                </div>
              )}

              <div class="p-6 flex-1 flex flex-col">
                <div class="flex items-center gap-2 mb-4">
                  <span class="text-xs font-bold tracking-wider text-purple-400 uppercase bg-purple-500/10 px-3 py-1 rounded-full">
                    {post.category}
                  </span>
                </div>

                <h3 class="text-xl font-bold text-white mb-3 group-hover:text-purple-200 transition-colors leading-snug">
                  {post.title}
                </h3>
                <p class="text-slate-400 text-sm leading-relaxed line-clamp-3 mb-4 flex-1">
                  {post.excerpt}
                </p>

                <div class="flex items-center justify-between pt-4 border-t border-slate-800/50">
                  <div class="flex items-center gap-3 text-slate-500 text-xs">
                    <span>{formatDate(post.created_at)}</span>
                    <span class="flex items-center gap-1">
                      <Clock class="w-3 h-3" />
                      {post.read_time}
                    </span>
                  </div>
                  <ArrowRight class="w-4 h-4 text-slate-600 group-hover:text-purple-400 group-hover:translate-x-1 transition-all" />
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>

      <!-- Empty State -->
      {posts.length === 0 && (
        <div class="text-center py-20">
          <BookOpen class="w-16 h-16 text-slate-700 mx-auto mb-4" />
          <h3 class="text-xl font-semibold text-slate-400 mb-2">아직 작성된 글이 없습니다</h3>
          <p class="text-slate-500">곧 유용한 가이드를 준비해 드릴게요.</p>
        </div>
      )}
    </div>
  </div>
</PageLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
